       <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider" xsi:type="string">email_service_listing.email_service_listing.email_service_columns</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">email_service_listing.email_service_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.filters</item>
